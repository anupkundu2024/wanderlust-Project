<% layout('layouts/boilerplate') -%>
<body>
  <style>
    #filters {
      display: flex;
      margin: 1rem;
      flex-wrap: wrap;
      padding: 0.3rem;
      align-items: center;
    }
    .filter {
      text-align: center;
      margin-right: 2rem;
      opacity: 0.7;
    }
    .filter:hover {
      opacity: 1;
      cursor: pointer;
    }
    .tax-toogle {
      margin: 20px;
      padding: 10px 20px;
      background-color: #f8f9fa;
      border: 1px solid #ddd;
      border-radius: 8px;
      width: fit-content;
      font-family: Arial, sans-serif;
    }
  </style>

  <div id="filters">
    <div class="filter">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-newspaper"></i></div>
      <p>New</p>
    </div>

    <div class="filter">
      <div><i class="fa-solid fa-mountain-sun"></i></div>
      <p>Mountain</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-water"></i></div>
      <p>Lake</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-umbrella-beach"></i></div>
      <p>Beach</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-tree"></i></div>
      <p>Nature</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-city"></i></div>
      <p>City</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-person-hiking"></i></div>
      <p>Adventure</p>
    </div>

    <div class="filter">
      <div><i class="fa-solid fa-campground"></i></div>
      <p>Camping</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-wind"></i></div>
      <p>Windy</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-snowflake"></i></div>
      <p>Snow</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-hot-tub-person"></i></div>
      <p>Spa</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-tent"></i></div>
      <p>Tent</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-hotel"></i></div>
      <p>Hotel</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-ship"></i></div>
      <p>Boat</p>
    </div>

    <div class="tax-toogle">
      <div class="form-check form-switch form-check-reverse">
        <input
          class="form-check-input"
          type="checkbox"
          id="switchCheckReverse"
        />
        <label class="form-check-label" for="switchCheckReverse"
          >Display total tax</label
        >
      </div>
    </div>
  </div>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let listing of allListings) { %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="card col">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          style="height: 20rem"
          alt="listing_image"
        />
        <div class="card-img-overlay">
          <!-- <p class="card-text">anup</p> -->
        </div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b>
            <br />
            <b class="priceInfo afterTax">
              &#8377; <%= listing.price.toLocaleString("en-IN") %>
            </b>
            <span class="taxInfo">/night</span>
            <i class="tax-info">&nbsp;&nbsp;+18% GST</i>
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>

<script>
  let taxSwitch = document.getElementById("switchCheckReverse");
  taxSwitch.addEventListener("change", () => {
    let taxInfos = document.getElementsByClassName("tax-info");
    let displayStyle = taxSwitch.checked ? "inline" : "none";

    for (let info of taxInfos) {
      info.style.display = displayStyle;
    }
  });
</script>
